{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Digital Wellbeing",
  "version": "0.1.0",
  "identifier": "com.wellbeing.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Digital Wellbeing",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1",
          "librsvg2-2"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "libappindicator-gtk3",
          "librsvg2"
        ]
      }
    },
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false
      }
    },
    "shortDescription": "Track and manage your digital habits",
    "longDescription": "Digital Wellbeing is a desktop application that helps you track screen time, set app limits, schedule focus sessions, and build healthier digital habits.",
    "category": "Utility",
    "copyright": "Copyright 2026",
    "licenseFile": "../LICENSE"
  }
}
